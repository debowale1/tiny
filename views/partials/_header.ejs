<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <a class="link-secondary" href="/subscribe">Subscribe</a>
      <a class="link-secondary" href="/submit-article">Submit Article</a>
    </div>
    <div class="col-4 text-center">
      <a class="blog-header-logo text-dark" href="/">Tiny</a>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <form class="me-3" action="/search" method="post">
        <input type="search" name='searchTerm' class="form-control" placeholder="Search" aria-label="search">
      </form>
      <% if(locals.user !== undefined) { %> 
        <div class="dropdown me-3">
          <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
            <%= user.name.split(' ')[0] %>
          </button>
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
            <li><a class="dropdown-item" href="/me">My Account</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" id="logout" href="/logout">Logout</a></li>
          </ul>
        </div>
        <!-- <a class="btn btn-sm btn-outline-secondary" id="logout" href="/logout">Log out</a> -->
        <% }else{ %> 
          <a class="btn btn-sm btn-outline-secondary me-3" href="/login">Sign in</a>
          <a class="btn btn-sm btn-outline-secondary" href="/register">Sign up</a>
      <% } %> 
    </div>
  </div>
</header>