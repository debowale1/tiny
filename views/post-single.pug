extends base

block content
  // ====== Post Details Start ======
  section.post-details-area
    .container.container-1000
      .post-details
        .entry-header
          h2.title= post.title
          ul.post-meta
            li= new Date(post.createdAt).toLocaleString('en-US', { month: 'long', year: 'numeric', day: 'numeric', weekday: 'short' })
            li
              a(href='#')= post.category.name
          p.short-desc= post.body.split('\n')[0]
        .entry-media.text-center
          img(src='/img/post-details/01.jpg' alt='image')
        .entry-content
          - const paragraphs = post.body.split('\n') 
          - for (let i = 0; i < paragraphs.length; i++)
            - if(paragraphs[i] === paragraphs[0])
              p.has-dropcap= paragraphs[i]
            - else
              p= paragraphs[i]
        .entry-footer
          .post-tags
            span Tag:
            each tag in post.tags
              a(href='#')= tag.name
          .social-share
            span Share:
            a(href='#')
              i.fab.fa-instagram
            a(href='#')
              i.fas.fa-heart
            a(href='#')
              i.fab.fa-facebook-f
            a(href='#')
              i.fab.fa-twitter
          .post-author
            .author-img
              img(src='/img/post-details/post-author.png' alt=`${post.author}`)
            h5
              a(href='#')= post.author
            p Article Writer, Senior Designer, Wordpress Developer Father of 2 Daughters
        .post-nav
          .prev-post
            a(href=`#`)
              i.far.fa-angle-left
            span.title Previous Post
          .next-post
            span.title Next Post
            a(href=`#`)
              i.far.fa-angle-right
        .related-posts
          h4.related-title Related Posts
          .related-loop.row.justify-content-center
            each item in relatedPosts
              .col-lg-6.col-md-6.col-sm-10
                .related-post-box
                  .thumb
                    img(src='/img/post-details/related-01.jpg' alt='image')
                  h5.title
                    a(href=`${item.slug}`)= item.title
