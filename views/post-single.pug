            //-     .thumb
            //-       img(src='/img/post-details/related-02.jpg' alt='image')
            //-     h5.title
            //-       a(href='#')
            //-         | The Olivier da Costa restaurant experience in Lisbon
      .comment-template
        - const numComments = post.comments.length
        h4.template-title= `${numComments} Comments`
        ul.comment-list
          each comment in post.comments
            li
              .comment-body
                .comment-author
                  img(src='/img/post-details/comment-01.jpg' alt='image')
                .comment-content
                  h6.comment-author= `${comment.userId.name}`
                  p= `${comment.comment}`
                  .comment-footer
                    span.date= new Date(comment.userId.createdAt).toLocaleString('en-GB', { month: 'long', year: 'numeric', day: 'numeric', weekday: 'short' })
                    a.reply-link(href='#') Reply
