doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Tiny Blog | Login
  // ========== COMMON STYLES ==========
  link(rel='stylesheet' href='/auth/css/bootstrap.min.css' media='screen')
  link(rel='stylesheet' href='/auth/css/font-awesome.min.css' media='screen')
  link(rel='stylesheet' href='/auth/css/animate.min.css' media='screen')
  // ========== PAGE STYLES ==========
  link(rel='stylesheet' href='/auth/css/blue.css')
  // ========== THEME CSS ==========
  link(rel='stylesheet' href='/auth/css/main.css' media='screen')
  // ========== MODERNIZR ==========
  script(src='auth/js/modernizr.min.js')
.main-wrapper
  .login-bg-color.bg-black-300
    .row
      .col-md-4.col-md-offset-4
        .panel.login-box
          .panel-heading
            .panel-title.text-center
              h4 TinyBlog - Sign Up
          .panel-body.p-20
            .section-title
              p.sub-title.text-muted
                | Sign up here to continue blogging
            form.registerForm
              .form-group
                label(for='name') Name
                input#name.form-control(type='text' placeholder='Full Name')
              .form-group
                label(for='email') Email address
                input#email.form-control(type='email' placeholder='Email')
              .form-group
                label(for='password') Password
                input#password.form-control(type='password' placeholder='Password')
              .form-group
                label(for='passwordConfirm') Confirm Password
                input#passwordConfirm.form-control(type='password' placeholder='Password Confirmation')
              .checkbox.op-check
                label
                  input.flat-blue-style(type='checkbox' name='remember')
                  span.ml-10 Remember me
              .form-group.mt-20
                div
                  a.form-link(href='#')
                    small.muted-text Forgot Password?
                  button.btn.btn-success.btn-labeled.pull-right(type='submit')
                    | Sign Up
                    span.btn-label.btn-label-right
                      i.fa.fa-check
                  .clearfix
            hr
            h5.text-center.mt-10.mb-20 Or Sign up With
            .text-center
              button.btn.btn-primary.bg-primary-600.btn-labeled(type='button')
                | Facebook
                span.btn-label.btn-label-right
                  i.fa.fa-facebook
              button.btn.btn-primary.bg-primary-300.btn-labeled.ml-5(type='button')
                | Twitter
                span.btn-label.btn-label-right
                  i.fa.fa-twitter
              button.btn.btn-danger.bg-danger-300.btn-labeled.ml-5(type='button')
                | Google
                span.btn-label.btn-label-right
                  i.fa.fa-google-plus
            // /.text-center
            hr
            .text-center
              a.form-link(href='#')
                small.muted-text Not registered yet?
            // /.text-center
        // /.panel
        p.text-muted.text-center
          small Copyright &copy; SaltTechno 2017
      // /.col-md-6 col-md-offset-3
    // /.row
  // /.
