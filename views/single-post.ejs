<div class="row g-5">
  <!-- main post body  -->
  <div class="col-md-9">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb pb-4 mb-4 border-bottom">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Post</li>
      </ol>
    </nav>
    <!-- <h3 class="pb-4 mb-4 fst-italic border-bottom">
      From the Firehose
    </h3> -->

    <article class="blog-post">
      <h2 class="blog-post-title"><%= post.title %></h2>
      <p class="blog-post-meta"><%= post.createdAt.toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>  <a href="/user/author/name"><%= post.author %> </a></p>

      <p><%- post.body %> </p>
      <hr>      
    </article>
    <h3><%= post.comments.length %> Comment(s)</h3>

    <div class="comment border my-3">
      <% if(post.comments && post.comments.length > 0) {%>
        <% post.comments.forEach(comment => { %>
          <div class="alert alert-light" role="alert">
            <%= comment.comment %>
            <p class="text-end fst-italic">By: <%= comment.userId.name %></p>
          </div>
        <% }) %>
      <% }else{ %>
        <h3>No Comments yet! Be the first to write a comment</h3>
      <% } %>
    </div>

    


    <nav class="blog-pagination" aria-label="Pagination">
      <a class="btn btn-outline-primary" href="/<%= prevPost.slug %>">Previous Post</a>
      <a class="btn btn-outline-primary" href="/<%= nextPost.slug %>">Next Post</a>
    </nav>

  </div>

  <!-- sidebar  -->
  <div class="col-md-3">
    <%- include('partials/_sidebar', {categories}) %> 
  </div>
</div>