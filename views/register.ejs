<% if(infoSuccessObj != '') { %>
  <div class="col-8 alert alert-success" role="alert">
    <%= infoSuccessObj %>
  </div>
<% } %>

<% if(infoErrorsObj != '') { %>
  <div class="col-8 alert alert-danger" role="alert">
    <%= infoErrorsObj %>
  </div>
<% } %>
<form id="registerForm">
  <img class="mb-4" src="https://getbootstrap.com/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
  <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

  <div class="form-floating">
    <input type="text" name='name' class="form-control name" id="floatingInput" placeholder="John Doe">
    <label for="floatingInput">Name</label>
  </div>
  <div class="form-floating">
    <input type="email" name='email' class="form-control email" id="floatingInput" placeholder="name@example.com">
    <label for="floatingInput">Email address</label>
  </div>
  <div class="form-floating">
    <input type="password" name='password' class="form-control password" id="floatingPassword" placeholder="Password">
    <label for="floatingPassword">Password</label>
  </div>
  <div class="form-floating">
    <input type="password" name='passwordConfirm' class="form-control passwordConfirm" id="floatingPassword" placeholder="Confirm Password">
    <label for="floatingPassword">Confirm Password</label>
  </div>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
  <p class="mt-1 mb-1 text-muted">&lArr; <a href="/">Back to Tiny</a></p>
  <p class="mt-1 mb-1 text-muted"><a href="/login">Login</a></p>
  <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
</form>