// ====== Header part start ======
header.sticky-header
  .container-fluid
    .d-flex.align-items-center.justify-content-between
      .site-logo
        a(href='/')
          img(src='/img/logo.png' alt='Tiny Blog')
      .header-right
        .search-area
          a.search-btn(href='javascript:void(0)')
            i.fas.fa-search
          .search-form
            a.search-close(href='#')
              i.fal.fa-times
            form(action='#')
              input(type='search' placeholder='Type here to search')
            .search-overly
        .offcanvas-panel
          a.panel-btn(href='javascript:void(0)')
            span
              span
              span
              span
          .panel-overly
          .offcanvas-items
            // Navbar Toggler
            a.panel-close(href='javascript:void(0)')
              | Back 
              i.fa.fa-angle-right(aria-hidden='true')
            ul.offcanvas-menu
              li
                a(href='/') Home
              li
                a(href='/about') About Tiny
              li
                a(href='/contact') Contact
              if user
                li
                  a(href='#')= user.name.split(' ')[0]
                  ul.submenu
                    li
                      a(href='/my-posts') My Posts
                    li
                      a(href='/users/update-password') Update Password
                    li
                      a(href='/users/update-details') Update My Details
                    li
                      a(href='/logout') Logout
              else
                li
                  a(href='/login') Login
                li
                  a(href='/signup') Sign Up
            .social-icons
              ul
                li
                  a(href='#')
                    i.fab.fa-facebook-f
                li
                  a(href='#')
                    i.fab.fa-instagram
                li
                  a(href='#')
                    i.fab.fa-twitter
                li
                  a(href='#')
                    i.fab.fa-youtube
// ====== Header part end ======