<!-- lastest featured post  -->
<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
  <% if(typeof featuredPosts !== 'undefined' && featuredPosts.length > 0) { %> 
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic"><%= featuredPosts[0].title %></h1>
    <p class="lead my-3"><%= `${featuredPosts[0].body.substr(0, 120)}...` %></p>
    <p class="lead mb-0"><a href="/<%= featuredPosts[0].slug %>" class="text-white fw-bold">Continue reading...</a></p>
  </div>
  <% }else{ %> 
    <h1>No Post</h1>
  <% } %> 
</div>
<!-- end lastest featured post  -->

<div class="row mb-2">
  <% featuredPosts.slice(1).forEach((post, index) => { %> 
  <div class="col-md-6">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <strong class="d-inline-block mb-2 text-primary"><%= post.category.name %></strong>
        <h3 class="mb-0"><%= post.title %></h3>
        <div class="mb-1 text-muted"><%- post.createdAt.toLocaleString('en-US', {month: 'long', day: 'numeric'}) %></div>
        <p class="card-text mb-auto"><%= `${post.body.substr(0, 90)}...` %></p>
        <a href="/<%= post.slug %>" class="stretched-link">Continue reading</a>
      </div>
      <div class="col-auto d-none d-lg-block">
